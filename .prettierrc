{
  "plugin": [
    "prettier-plugin-tailwindcss"
  ],
  "importOrder": [
    "^~/(.*)$",
    "^[./]"
  ],
  "importOrderSeparation": true,
  "importOrderSortSpecifiers": true,
  "arrowParens": "avoid",
  "jsxSingleQuote": true,
  "printWidth": 100,
  "proseWrap": "always",
  "semi": false,
  "singleQuote": true,
  "tabWidth": 2,
  "trailingComma": "none"
}
